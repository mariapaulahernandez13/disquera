<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
         
  <display-name>Disquera</display-name>

  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file> 
  </welcome-file-list>

  <servlet>
    <servlet-name>servlet</servlet-name>
    <servlet-class>servlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>servlet</servlet-name>
    <url-pattern>/servlet</url-pattern>
  </servlet-mapping>

  <servlet>
  <servlet-name>controller.generoController</servlet-name>
    <servlet-class>controller.generoController</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>controller.generoController</servlet-name>
    <url-pattern>/genero</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>controller.disqueraController</servlet-name>
      <servlet-class>controller.disqueraController</servlet-class>
    </servlet>
  
    <servlet-mapping>
      <servlet-name>controller.disqueraController</servlet-name>
      <url-pattern>/disquera</url-pattern>
    </servlet-mapping>

  <servlet>
  <servlet-name>controller.cancionController</servlet-name>
    <servlet-class>controller.cancionController</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>controller.cancionController</servlet-name>
    <url-pattern>/cancion</url-pattern>
  </servlet-mapping>

  <servlet>
  <servlet-name>controller.albumController</servlet-name>
    <servlet-class>controller.albumController</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>controller.albumController</servlet-name>
    <url-pattern>/album</url-pattern>
  </servlet-mapping>

  <servlet>
  <servlet-name>controller.artistaController</servlet-name>
    <servlet-class>controller.artistaController</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>controller.artistaController</servlet-name>
    <url-pattern>/artista</url-pattern>
  </servlet-mapping>
</web-app>